<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Full" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <UsingTask AssemblyFile="CommunityTasks\MSBuild.Community.Tasks.dll" TaskName="MSBuild.Community.Tasks.AssemblyInfo" />
    <PropertyGroup>
        <BuildDependsOn>
            AssemblyInfo;
            $(BuildDependsOn);
        </BuildDependsOn>   
    </PropertyGroup>

    <Target Name="AssemblyInfo">
        <AssemblyInfo CodeLanguage="CS"
            OutputFile="Properties\AssemblyInfo.cs"
            AssemblyTitle="$(ProjectName) $(SemVer)"
            AssemblyProduct="$(ProjectName) $(SemVer)"
            CLSCompliant="True"
            />    
    </Target>
</Project>